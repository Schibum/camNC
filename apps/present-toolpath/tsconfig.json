{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    /* React Config */
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // "lib": ["ESNext", "DOM"],
    // "types": []
    "types": ["@vitest/browser/providers/playwright"],

  },
  "include": [
    "node_modules/vite/client.d.ts",
    "**/*"
  ]
}
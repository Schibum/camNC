{
  "extends": "@wbcnc/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "@webgpu/types"
    ],
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebGPU"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}